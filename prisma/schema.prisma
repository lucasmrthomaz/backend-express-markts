generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String
}

model Tasks {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String?
  description String?
  status      String
}
